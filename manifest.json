{
  "manifest_version": 3,
  "name": "B3 Quick Quote",
  "version": "1.0.0",
  "description": "Cotação rápida de ações e FIIs da B3 + Top 3 maiores altas e baixas do dia.",
  "action": {
    "default_title": "B3 Quick Quote",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://query1.finance.yahoo.com/*",
    "https://query2.finance.yahoo.com/*"
  ]
}